<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yibao.mobileapp.MainActivity"
    android:background="@mipmap/face_rect">

    <!--org.opencv.android.JavaCameraView
        android:id="@+id/jcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:paddingStart="0dp"
        app:paddingEnd="0dp"
        android:layout_centerInParent="true"
    /-->
    <org.opencv.android.JavaCameraView
        android:id="@+id/jcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:paddingStart="0dp"
        app:paddingEnd="0dp"
        android:layout_centerInParent="true"
        />
    <include layout="@layout/layout_title_text"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_show"
        android:scaleType="fitCenter"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/face_rect"
            android:layout_centerInParent="true"
            android:id="@+id/face_rect"
            android:scaleType="fitCenter"
            android:visibility="visible"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_msg"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/txt_middle"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>